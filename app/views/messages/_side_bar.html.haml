.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__name
        = current_user.name
      %ul.side-header__box__icon
        %li.side-header__box__icon--new-group
          = link_to new_group_path, class: "first" do
            = icon('fa', 'edit')
        %li.side-header__box__icon--edit-user
          = link_to edit_user_path(current_user) do
            = icon('fa', 'cog')
  .side-groups
    - current_user.groups.each do |group|
      .side-groups__group
        = link_to '#' do
          .side-groups__group__name
            = group.name
          .side-groups__group__latest-message
